<!--
	<H3>Shutdown an agent platform.</H3>

	Shutdowns an agent platform by contacting
	the AMS which is stored in the ams belief.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="ShutdownPlatform"
	package="jadex.testcases.semiautomatic">

	<imports>
		<import>jadex.adapter.fipa.*</import>
	</imports>

	<capabilities>
		<capability name="amscap" file="jadex.planlib.AMS"></capability>
	</capabilities>

	<beliefs>
		<belief name="ams" class="AgentIdentifier">
			<!-- <fact>SFipa.AMS</fact> -->
			<fact>new AgentIdentifier("ams@horst", new String[]{"nio-mtp://134.100.11.203:8888"})</fact>
			<!--<fact>new AgentIdentifier("ams@vsisstaff0:1099/JADE", new String[]{"http://134.100.11.200:7778/acc"})</fact>-->
		</belief>
	</beliefs>

	<goals>
		<achievegoalref name="ams_shutdown_platform">
			<concrete ref="amscap.ams_shutdown_platform"/>
		</achievegoalref>
	</goals>
	
	<plans>
		<plan name="tester_plan">
			<body class="ShutdownTesterPlan"/>
			<!-- <body>new ShutdownTesterPlan()</body> -->
		</plan>
	</plans>

	<configurations>
		<configuration name="default">
			<!-- <goals>
				<initialgoal ref="ams_shutdown_platform">
					<parameter ref="ams">
						<value>$beliefbase.ams</value>
					</parameter>
				</initialgoal>
			</goals> -->
			<plans>
				<initialplan ref="tester_plan"/>
			</plans>
		</configuration>
	</configurations>

</agent>
