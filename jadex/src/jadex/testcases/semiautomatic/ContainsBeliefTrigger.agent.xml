<!--
	<H3>ContainsBeliefTrigger Agent</H3>
	Tests if a goal can be created when a given beliefs exists.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="ContainsBeliefTrigger"
	package="jadex.testcases.semiautomatic">

	<goals>
		<achievegoal name="testgoal">
			<creationcondition>
				$beliefbase.containsBelief("testbelief") || $beliefbase.testbelief!=null
			</creationcondition>
		</achievegoal>
	</goals>
	
	<plans>
		<plan name="beliefcreator_plan">
			<body inline="true">
				getBeliefbase().createBelief("testbelief", String.class, -1);
			</body>
		</plan>
	</plans>

    <properties>
        <property name="logging.level">java.util.logging.Level.INFO</property>
    </properties>
    
    <configurations>
    	<configuration name="default">
    		<plans>
    			<initialplan ref="beliefcreator_plan"/>
    		</plans>
    	</configuration>
    </configurations>
    
</agent>
