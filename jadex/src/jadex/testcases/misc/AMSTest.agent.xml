<!--
	<H3>Test the AMS capability.</H3>
	AMS Test Agent.
	Tests the AMS plans.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="AMSTest"
	package="jadex.testcases.misc">

	<imports>
		<import>jadex.planlib.*</import>
		<import>java.util.logging.*</import>
		<import>jadex.adapter.fipa.*</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.planlib.Test"/>
		<capability name="amscap" file="jadex.planlib.AMS"/>
	</capabilities>

	<beliefs>
		<beliefsetref name="reports">
			<concrete ref="testcap.reports"/>
		</beliefsetref>
		<beliefref name="testcase_cnt" class="int">
			<concrete ref="testcap.testcase_cnt"/>
		</beliefref>
		<beliefref name="timeout" class="long" exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testcenter" class="jadex.adapter.fipa.AgentIdentifier" exported="true">
			<concrete ref="testcap.testcenter"/>
		</beliefref>
	</beliefs>

	<goals>
		<achievegoalref name="ams_create_agent">
			<concrete ref="amscap.ams_create_agent"/>
		</achievegoalref>
		<achievegoalref name="ams_destroy_agent">
			<concrete ref="amscap.ams_destroy_agent"/>
		</achievegoalref>
		<achievegoalref name="ams_search_agents">
			<concrete ref="amscap.ams_search_agents"/>
		</achievegoalref>
		<achievegoalref name="ams_shutdown_platform">
			<concrete ref="amscap.ams_shutdown_platform"/>
		</achievegoalref>
	</goals>

	<plans>
		<plan name="test">
			<body class="AMSTestPlan"/>
			<!-- <body>new AMSTestPlan()</body> -->
		</plan>
	</plans>

	<events>
		<messageevent name="request_create_agent" type="fipa" direction="send">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.REQUEST</value>
			</parameter>
			<parameter name="protocol" class="String" direction="fixed">
				<value>SFipa.PROTOCOL_REQUEST</value>
			</parameter>
			<parameter name="ontology" class="String" direction="fixed">
				<value>FIPAOntology.ONTOLOGY_NAME</value>
			</parameter>
			<parameter name="language" class="String" direction="fixed">
				<value>SFipa.NUGGETS_XML</value>
 			</parameter>
			<parameter name="content-class" class="Class" direction="fixed">
 				<value>AMSCreateAgent.class</value>
			</parameter>
			<parameter name="reply-with" class="String">
				<value>SFipa.createUniqueId($scope.getAgentName())</value>
			</parameter>
		</messageevent>

		<messageevent name="request_destroy_agent" type="fipa" direction="send">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.REQUEST</value>
			</parameter>
			<parameter name="protocol" class="String" direction="fixed">
				<value>SFipa.PROTOCOL_REQUEST</value>
			</parameter>
			<parameter name="ontology" class="String" direction="fixed">
				<value>FIPAOntology.ONTOLOGY_NAME</value>
			</parameter>
			<parameter name="language" class="String" direction="fixed">
				<value>SFipa.NUGGETS_XML</value>
 			</parameter>
			<parameter name="content-class" class="Class" direction="fixed">
 				<value>AMSDestroyAgent.class</value>
			</parameter>
			<parameter name="reply-with" class="String">
				<value>SFipa.createUniqueId($scope.getAgentName())</value>
			</parameter>
		</messageevent>

		<messageevent name="request_search_agents" type="fipa" direction="send">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.REQUEST</value>
			</parameter>
			<parameter name="protocol" class="String" direction="fixed">
				<value>SFipa.PROTOCOL_REQUEST</value>
			</parameter>
			<parameter name="ontology" class="String" direction="fixed">
				<value>FIPAOntology.ONTOLOGY_NAME</value>
			</parameter>
			<parameter name="language" class="String" direction="fixed">
				<value>SFipa.NUGGETS_XML</value>
 			</parameter>
			<parameter name="content-class" class="Class" direction="fixed">
 				<value>AMSSearchAgents.class</value>
			</parameter>
			<parameter name="reply-with" class="String">
				<value>SFipa.createUniqueId($scope.getAgentName())</value>
			</parameter>
		</messageevent>

		<messageevent name="request_shutdown_platform" type="fipa" direction="send">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.REQUEST</value>
			</parameter>
			<parameter name="protocol" class="String" direction="fixed">
				<value>SFipa.PROTOCOL_REQUEST</value>
			</parameter>
			<parameter name="ontology" class="String" direction="fixed">
				<value>FIPAOntology.ONTOLOGY_NAME</value>
			</parameter>
			<parameter name="language" class="String" direction="fixed">
				<value>SFipa.NUGGETS_XML</value>
 			</parameter>
			<parameter name="content-class" class="Class" direction="fixed">
 				<value>AMSShutdownPlatform.class</value>
			</parameter>
			<parameter name="reply-with" class="String">
				<value>SFipa.createUniqueId($scope.getAgentName())</value>
			</parameter>
		</messageevent>

		<messageevent name="inform_done" type="fipa" direction="receive">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.INFORM</value>
			</parameter>
			<parameter name="protocol" class="String" direction="fixed">
				<value>SFipa.PROTOCOL_REQUEST</value>
			</parameter>
			<parameter name="ontology" class="String" direction="fixed">
				<value>FIPAOntology.ONTOLOGY_NAME</value>
			</parameter>
			<parameter name="content-class" class="Class" direction="fixed">
 				<value>Done.class</value>
			</parameter>
		</messageevent>
	</events>

	<properties>
		<!--<property name="debugging">true</property>-->
		<!-- <property name="logging.level">java.util.logging.Level.FINE</property> -->
		<property name="logging.useParentHandlers">true</property>
	</properties>

	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief ref="testcase_cnt">
					<fact>10</fact>
				</initialbelief>
			</beliefs>
			<plans>
				<initialplan ref="test"/>
			</plans>
		</configuration>
	</configurations>
</agent>

