<!--
	<H3>Test the DF capability.</H3>
	DF Test Agent.
	Tests the df plans.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="DFTest"
	package="jadex.testcases.misc">

	<imports>
		<import>jadex.planlib.*</import>
		<import>jadex.adapter.fipa.SFipa</import>
		<import>jadex.adapter.fipa.ServiceDescription</import>
		<import>java.util.logging.*</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.planlib.Test"/>
		<capability name="dfcap" file="jadex.planlib.DF"/>
	</capabilities>

	<beliefs>
		<beliefsetref name="reports">
			<concrete ref="testcap.reports"/>
		</beliefsetref>
		<beliefref name="testcase_cnt" class="int">
			<concrete ref="testcap.testcase_cnt"/>
		</beliefref>
		<beliefref name="timeout" class="long" exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testcenter" class="jadex.adapter.fipa.AgentIdentifier" exported="true">
			<concrete ref="testcap.testcenter"/>
		</beliefref>
	</beliefs>

	<goals>
		<achievegoalref name="df_register">
			<concrete ref="dfcap.df_register"/>
		</achievegoalref>
		<achievegoalref name="df_deregister">
			<concrete ref="dfcap.df_deregister"/>
		</achievegoalref>
		<achievegoalref name="df_search">
			<concrete ref="dfcap.df_search"/>
		</achievegoalref>
		<maintaingoalref name="df_keep_registered">
			<concrete ref="dfcap.df_keep_registered"/>
		</maintaingoalref>
	</goals>

	<plans>
		<plan name="test">
			<body class="DFTestPlan"/>
			<!-- <body>new DFTestPlan()</body> -->
		</plan>
	</plans>

	<properties>
		<property name="fipa.agentdescription.dftest">
			SFipa.createAgentDescription(null, new ServiceDescription[]
			{
				SFipa.createServiceDescription("service_a", "a", "a"),
				SFipa.createServiceDescription("service_b", "b", "b"),
				SFipa.createServiceDescription("service_c", "c", "c")
			}, null, null, null)
		</property>
		<!--<property name="debugging">true</property>-->
		<!-- <property name="logging.level">java.util.logging.Level.INFO</property>  -->
		<!-- <property name="logging.useParentHandlers">true</property> -->
	</properties>

	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief ref="testcase_cnt">
					<fact>14</fact>
				</initialbelief>
			</beliefs>
			<goals>
				<initialgoal name="initial_keep" ref="df_keep_registered">
					<parameter ref="description">
						<value>$propertybase.getProperty("fipa.agentdescription.dftest")</value>
					</parameter>
					<parameter ref="leasetime">
						<value>4000</value>
					</parameter>
				</initialgoal>
			</goals>
			<plans>
				<initialplan ref="test"/>
			</plans>
		</configuration>
	</configurations>
</agent>

