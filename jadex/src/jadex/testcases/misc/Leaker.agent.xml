<!--
	<H3>Test, if cleaning up works properly.</H3>

	This agent starts plans, which try to provoke
	memory leaks.
	The test(s) to run can be selected: 1=goals, 2=conditions, 3=internal events, 4=message events, 0=all tests.
	todo: how to determine success of testcases? memory consumption is not meaningful
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="Leaker"
	package="jadex.testcases.misc">

	<imports>
		<import>jadex.adapter.fipa.AgentIdentifier</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.planlib.Test"/>
	</capabilities>

	<beliefs>
		<belief name="runs" class="int" exported="true">
			<fact>10000</fact>
		</belief>
		<beliefsetref name="reports">
			<concrete ref="testcap.reports"/>
		</beliefsetref>
		<beliefref name="testcase_cnt" class="int">
			<concrete ref="testcap.testcase_cnt"/>
		</beliefref>
		<beliefref name="keepalive" exported="true">
			<concrete ref="testcap.keepalive"/>
		</beliefref>
		<beliefref name="timeout" class="long" exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testcenter" class="jadex.adapter.fipa.AgentIdentifier" exported="true">
			<concrete ref="testcap.testcenter"/>
		</beliefref>
		<belief name="test" class="int" exported="true"
			description="The test to run (1=goals, 2=conditions, 3=internal events, 4=message events, 0=all tests).">
			<fact>0</fact>
		</belief>
	</beliefs>

	<goals>
		<achievegoal name="testgoal">
			<parameter name="param1" class="long" updaterate="1000">
				<value evaluationmode="dynamic">System.currentTimeMillis()</value>
			</parameter>
		</achievegoal>
	</goals>

	<plans>
		<plan name="leaker">
			<!-- Specifies the testcase to run (1-4, 0 for all tests). -->
			<parameter name="testcase" class="int">
				<value>$beliefbase.test</value>
			</parameter>
			<body class="LeakerPlan"/>
			<!-- <body>new LeakerPlan()</body> -->
		</plan>
	</plans>

	<events>
		<internalevent name="testevent">
			<parameter name="param1" class="long" updaterate="1000">
				<value evaluationmode="dynamic">System.currentTimeMillis()</value>
			</parameter>
		</internalevent>
		<messageevent name="testmsg" type="fipa">
			<parameter name="content" class="String">
 				<value>"test-msg-content"</value>
			</parameter>
			<parameterset name="receivers" class="AgentIdentifier">
				<value>$agent.getAgentIdentifier()</value>
			</parameterset>
		</messageevent>
	</events>

	<properties>
		<!--<property name="debugging">true</property>-->
		<!--<property name="logging.level">java.util.logging.Level.FINE</property>-->
		<property name="logging.useParentHandlers">true</property>
	</properties>


	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief ref="testcase_cnt">
					<fact>$beliefbase.test==0 ? 4 : 1</fact>
				</initialbelief>
			</beliefs>
			<plans>
				<initialplan ref="leaker"/>
			</plans>
		</configuration>
	</configurations>

</agent>
