<!--
	<H3>Test the repeatability of agent execution.</H3>
	The repeatability test checks if triggered conditions
	are executed in the expected order.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="Repeatability"
	package="jadex.testcases.misc">

	<imports>
		<import>jadex.planlib.*</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.planlib.Test"/>
	</capabilities>

	<beliefs>
		<beliefsetref name="reports">
			<concrete ref="testcap.reports"/>
		</beliefsetref>
		<beliefref name="testcase_cnt" class="int">
			<concrete ref="testcap.testcase_cnt"/>
		</beliefref>
		<beliefref name="timeout" class="long" exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testcenter" class="jadex.adapter.fipa.AgentIdentifier" exported="true">
			<concrete ref="testcap.testcenter"/>
		</beliefref>
		<belief name="a" class="String"/>
		<belief name="b" class="String"/>
		<beliefset name="c" class="String"/>
		<beliefset name="d" class="String"/>
		<belief name="cnt" class="int"/>
	</beliefs>

	<plans>
		<plan name="test">
			<body class="RepeatabilityPlan"/>
			<!-- <body>new RepeatabilityPlan()</body>-->
		</plan>
		<plan name="trigger1">
			<body>new TriggerPlan(1, "First beliefchange trigger.")</body>
			<trigger>
				<beliefchange ref="a"/>
			</trigger>
		</plan>
		<plan name="trigger2">
			<body>new TriggerPlan(2, "Second beliefchange trigger.")</body>
			<trigger>
				<beliefchange ref="b"/>
			</trigger>
		</plan>
		<plan name="trigger3">
			<body>new TriggerPlan(3, "First beliefsetchange trigger.")</body>
			<trigger>
				<beliefsetchange ref="c"/>
			</trigger>
		</plan>
		<plan name="trigger4">
			<body>new TriggerPlan(4, "Second beliefsetchange trigger.")</body>
			<trigger>
				<beliefsetchange  ref="d"/>
			</trigger>
		</plan>
		<plan name="trigger5">
			<body>new TriggerPlan(5, "First belief condition trigger.")</body>
			<trigger>
				<condition>"test".equals($beliefbase.a)</condition>
			</trigger>
		</plan>
		<plan name="trigger6">
			<body>new TriggerPlan(6, "Second belief condition trigger.")</body>
			<trigger>
				<condition>"test".equals($beliefbase.b)</condition>
			</trigger>
		</plan>
		<plan name="trigger7">
			<body>new TriggerPlan(7, "First beliefset condition trigger.")</body>
			<trigger>
				<condition>$beliefbase.c.length>0 &amp;&amp; "test".equals($beliefbase.c[0])</condition>
			</trigger>
		</plan>
		<plan name="trigger8">
			<body>new TriggerPlan(8, "Second beliefset condition trigger.")</body>
			<trigger>
				<condition>$beliefbase.d.length>0 &amp;&amp; "test".equals($beliefbase.d[0])</condition>
			</trigger>
		</plan>
		<plan name="trigger9">
			<body>new TriggerPlan(9, "First factadded trigger.")</body>
			<trigger>
				<factadded ref="c"/>
			</trigger>
		</plan>
		<plan name="trigger10">
			<body>new TriggerPlan(10, "Second factadded trigger.")</body>
			<trigger>
				<factadded ref="d"/>
			</trigger>
		</plan>
	</plans>

	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief ref="testcase_cnt">
					<fact>10</fact>
				</initialbelief>
			</beliefs>
			<plans>
				<initialplan ref="test"/>
			</plans>
		</configuration>
	</configurations>
</agent>

