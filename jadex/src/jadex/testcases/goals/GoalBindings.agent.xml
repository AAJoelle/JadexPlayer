<!--
	<H3>Test the creation of goals with binding parameters.</H3>

	An initial goal is specified in the configuration.
	Due to several binding options, three instances of the goal
	are created and dispatched.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="GoalBindings"
	package="jadex.testcases.goals">

	<imports>
		<import>jadex.testcases.*</import>
		<import>jadex.planlib.TestReport</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.planlib.Test"/>
	</capabilities>

	<beliefs>
		<beliefsetref name="reports">
			<concrete ref="testcap.reports"/>
		</beliefsetref>
		<beliefref name="testcase_cnt" class="int">
			<concrete ref="testcap.testcase_cnt"/>
		</beliefref>
		<beliefref name="timeout" class="long" exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testcenter" class="jadex.adapter.fipa.AgentIdentifier" exported="true">
			<concrete ref="testcap.testcenter"/>
		</beliefref>
		<belief name="create" class="boolean"/>
	</beliefs>

	<goals>
		<performgoal name="test">
			<parameter name="num" class="int">
				<bindingoptions>new int[]{1,2,3}</bindingoptions>
			</parameter>
			<creationcondition>
 				$beliefbase.create
 			</creationcondition>
		</performgoal>
	</goals>

	<plans>
		<plan name="printer">
			<parameter name="num" class="int">
				<goalmapping ref="test.num"/>
			</parameter>
			<body>new StoreReportPlan(new TestReport("goal_binding", "Initial goal with binding "+$plan.num, true, null))</body>
			<trigger>
				<goal ref="test"/>
			</trigger>
		</plan>
	</plans>

	<properties>
		<property name="debugging">false</property>
	</properties>

	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief ref="testcase_cnt">
					<fact>3</fact>
				</initialbelief>
			</beliefs>
			<goals>
				<initialgoal ref="test">
 					<!--<parameter ref="num">
						 <value>33</value>
 					</parameter>-->
				</initialgoal>
			</goals>
		</configuration>
	</configurations>

</agent>
