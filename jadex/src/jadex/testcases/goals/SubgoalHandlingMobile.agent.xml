<!--
	<H3>Test subgoal handling in mobile plans.</H3>
	
	The agent tests correct handling of three cases:
	<ol>
		<li>The subgoal succeeds and the action() method is called.</li>
		<li>The subgoal fails and the exception() method is called with a GoalFailureException.</li>
		<li>The subgoal times out and the exception() method is called with a TimeoutException.</li>
	</ol>
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="SubgoalHandlingMobile"
	package="jadex.testcases.goals">

	<imports>
		<import>jadex.testcases.*</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.planlib.Test"/>
	</capabilities>

	<beliefs>
		<beliefsetref name="reports">
			<concrete ref="testcap.reports"/>
		</beliefsetref>
		<beliefref name="testcase_cnt" class="int">
			<concrete ref="testcap.testcase_cnt"/>
		</beliefref>
		<beliefref name="timeout" class="long" exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testcenter" class="jadex.adapter.fipa.AgentIdentifier" exported="true">
			<concrete ref="testcap.testcenter"/>
		</beliefref>
	</beliefs>

	<goals>
		<achievegoal name="success_goal"/>
		<achievegoal name="failure_goal"/>
		<achievegoal name="timeout_goal"/>
	</goals>

	<plans>
        <plan name="test_success">
			<body type="mobile">new SubgoalSuccessMobilePlan()</body>
		</plan>
        <plan name="test_failure">
			<body type="mobile">new SubgoalFailureMobilePlan()</body>
		</plan>
        <plan name="test_timeout">
			<body type="mobile">new SubgoalTimeoutMobilePlan()</body>
		</plan>
		<plan name="success_plan">
			<body>new ResultPlan(-1, true)</body>
			<trigger>
				<goal ref="success_goal"/>
			</trigger>
		</plan>
		<plan name="failure_plan">
			<body>new ResultPlan(-1, false)</body>
			<trigger>
				<goal ref="failure_goal"/>
			</trigger>
		</plan>
		<plan name="timeout_plan">
			<body>new ResultPlan(10000, false)</body>
			<trigger>
				<goal ref="timeout_goal"/>
			</trigger>
		</plan>
	</plans>

	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief ref="testcase_cnt">
					<fact>3</fact>
				</initialbelief>
			</beliefs>
			<plans>
				<initialplan ref="test_success"/>
				<initialplan ref="test_failure"/>
				<initialplan ref="test_timeout"/>
			</plans>
		</configuration>
	</configurations>

</agent>

