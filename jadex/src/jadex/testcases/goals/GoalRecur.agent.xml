<!--
	<H3>Test a goal recur.</H3>

	Tests if the recur continues to process goals even if there are no plans.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="GoalRecur"
	package="jadex.testcases.goals">

	<imports>
		<import>jadex.testcases.ResultPlan</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.planlib.Test"/>
	</capabilities>

	<beliefs>
		<beliefsetref name="reports">
			<concrete ref="testcap.reports"/>
		</beliefsetref>
		<beliefref name="testcase_cnt" class="int">
			<concrete ref="testcap.testcase_cnt"/>
		</beliefref>
		<beliefref name="timeout" class="long" exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testcenter" class="jadex.adapter.fipa.AgentIdentifier" exported="true">
			<concrete ref="testcap.testcenter"/>
		</beliefref>
		<belief name="context" class="boolean" />
	</beliefs>

	<goals>
		<performgoal name="perf" recur="true" recurdelay="200"/>
		<achievegoal name="achi" recur="true" recurdelay="200"/>
		<querygoal name="quer" recur="true" recurdelay="200">
			<parameter name="result" class="String" direction="out"/>
		</querygoal>
	</goals>

	<plans>
		<plan name="result_plan">
			<body>new ResultPlan(true, "dummy")</body>
			<trigger>
				<goal ref="perf"/>
				<goal ref="achi"/>
			</trigger>
			<precondition>$beliefbase.context</precondition>
		</plan>
		<plan name="result_plan2">
			<parameter name="result" class="String">
				<goalmapping ref="quer.result"/>
			</parameter>
			<body>new ResultPlan(true, "dummy")</body>
			<trigger>
				<goal ref="quer"/>
			</trigger>
			<precondition>$beliefbase.context</precondition>
		</plan>
 		<plan name="testplan">
 			<body class="RecurTestPlan"/>
			<!-- <body>new RecurTestPlan()</body> -->
		</plan>
	</plans>

	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief ref="testcase_cnt">
					<fact>6</fact>
				</initialbelief>
			</beliefs>
			<goals>
				<initialgoal ref="perf"/>
				<initialgoal ref="achi"/>
				<initialgoal ref="quer"/>
			</goals>
 			<plans>
				<initialplan ref="testplan"/>
			</plans>
		</configuration>
	</configurations>

</agent>
