<!--
	<H3>Tests if the parameter sets of goals work.</H3>

	Using the bdi viewer one should be able to
	see a goal having two parameter sets.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="ParameterSet"
	package="jadex.testcases.goals">

	<imports>
		<import>jadex.testcases.*</import>
		<import>jadex.util.*</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.planlib.Test"/>
	</capabilities>

	<beliefs>
		<beliefsetref name="reports">
			<concrete ref="testcap.reports"/>
		</beliefsetref>
		<beliefref name="testcase_cnt" class="int">
			<concrete ref="testcap.testcase_cnt"/>
		</beliefref>
		<beliefref name="timeout" class="long" exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testcenter" class="jadex.adapter.fipa.AgentIdentifier" exported="true">
			<concrete ref="testcap.testcenter"/>
		</beliefref>
		<belief name="create" class="boolean"/>
	</beliefs>
	
	<goals>
		<achievegoal name="testgoal">
			<parameterset name="names" class="String">
				<values>new String[]{"a", "b", "c"}</values>
			</parameterset>
			<parameterset name="morenames" class="String">
				<value>"d"</value>
				<value>"e"</value>
				<value>"f"</value>
			</parameterset>
		</achievegoal>
	</goals>

	<plans>
		<plan name="printer">
			<parameterset name="names" class="String">
				<goalmapping ref="testgoal.names"/>
			</parameterset>
			<parameterset name="morenames" class="String">
				<goalmapping ref="testgoal.morenames"/>
			</parameterset>
			<body class="ParameterSetPlan"/>
			<!-- <body>new ParameterSetPlan()</body> -->
			<trigger>
				<goal ref="testgoal"/>
			</trigger>
		</plan>
	</plans>
	
	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief ref="testcase_cnt">
					<fact>2</fact>
				</initialbelief>
			</beliefs>
			<goals>
				<initialgoal ref="testgoal"/>
			</goals>
		</configuration>
	</configurations>

</agent>

