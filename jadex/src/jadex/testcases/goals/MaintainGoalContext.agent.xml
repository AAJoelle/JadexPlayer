<!--
	<H3>Test maintain goal suspension.</H3>

	The test plan creates a maintain goal and suspends it
	while it is in process.
	Then the goal is reactivated to see if it will continue to work.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="MaintainGoalContext"
	package="jadex.testcases.goals">

	<imports>
		<import>jadex.testcases.*</import>
		<import>java.util.logging.Level</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.planlib.Test"/>
	</capabilities>

	<beliefs>
		<beliefsetref name="reports">
			<concrete ref="testcap.reports"/>
		</beliefsetref>
		<beliefref name="testcase_cnt" class="int">
			<concrete ref="testcap.testcase_cnt"/>
		</beliefref>
		<beliefref name="timeout" class="long" exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testcenter" class="jadex.adapter.fipa.AgentIdentifier" exported="true">
			<concrete ref="testcap.testcenter"/>
		</beliefref>
		<belief name="count" class="int">
			<fact>0</fact>
		</belief>
		<belief name="context" class="boolean">
			<fact>true</fact>
		</belief>
	</beliefs>

	<goals>
		<maintaingoal name="maintain" exclude="never" retrydelay="100">
			<contextcondition>
 				$beliefbase.context
			</contextcondition>
			<maintaincondition>
 				$beliefbase.count==5
			</maintaincondition>
		</maintaingoal>
	</goals>

	<plans>
		<plan name="test">
			<body class="MaintainTestPlan"/>
			<!-- <body>new MaintainTestPlan()</body> -->
		</plan>
		<plan name="increment">
			<body>new BeliefIncrementPlan("count", 1, 0)</body>
			<trigger>
				<goal ref="maintain"/>
			</trigger>
		</plan>
	</plans>
	
	<properties>
		<!-- <property name="logging.level">Level.INFO</property> -->
		<!-- <property name="debugging">true</property> -->
	</properties>

	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief ref="testcase_cnt">
					<fact>4</fact>
				</initialbelief>
			</beliefs>
			<plans>
				<initialplan ref="test"/>
			</plans>
		</configuration>
	</configurations>

</agent>
