<!--
	<H3>Test abstract goal dispatched from outer capability.</H3>

	Defines an abstract goal and a plan to react on it.
-->
<capability xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	package="jadex.testcases.goals"
	name="OuterAbstractGoal">

	<imports>
		<import>jadex.testcases.*</import>
	</imports>

	<goals>
		<achievegoalref name="agoal" exported="true">
			<abstract required="false"/>
			<parameterref name="iparam" class="String">
				<abstract/>
			</parameterref>
			<parameterref name="iresult" class="String">
				<abstract/>
			</parameterref>
		</achievegoalref>
	</goals>

	<plans>
		<plan name="testplan">
			<parameter name="param" class="Object">
				<goalmapping ref="agoal.iparam"/>
			</parameter>
			<parameter name="result" class="Object">
				<goalmapping ref="agoal.iresult"/>
			</parameter>
			<body>new ResultPlan(0, true, $plan.param)</body>
			<trigger>
				<goal ref="agoal"/>
			</trigger>
		</plan>
	</plans>
	
</capability>