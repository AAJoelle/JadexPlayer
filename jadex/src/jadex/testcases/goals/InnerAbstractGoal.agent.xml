<!--
	<H3>Test abstract goal dispatched by inner capability.</H3>

	Creates a goal which is assigned to the abstract goal
	from a capability.
-->
<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="InnerAbstractGoal"
	package="jadex.testcases.goals">
	
	<imports>
		<import>jadex.testcases.*</import>
	</imports>
	
	<capabilities>
		<capability name="capA" file="InnerAbstractGoal"/>
		<capability name="testcap" file="jadex.planlib.Test"/>
	</capabilities>
	
	<beliefs>
		<beliefsetref name="reports">
			<assignto ref="capA.reports"/>
			<concrete ref="testcap.reports"/>
		</beliefsetref>
		<beliefref name="timeout" class="long" exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testcenter" class="jadex.adapter.fipa.AgentIdentifier" exported="true">
			<concrete ref="testcap.testcenter"/>
		</beliefref>
	</beliefs>

	<goals>
		<achievegoal name="agoal" exported="true">
			<assignto ref="capA.testgoal"/>
			<parameter name="oparam" class="String">
				<assignto ref="capA.testgoal.param"/>
			</parameter>
			<parameter name="oresult" class="String" direction="out">
				<assignto ref="capA.testgoal.result"/>
			</parameter>
		</achievegoal> 
	</goals>
	
	<plans>
		<plan name="testplan">
			<parameter name="param" class="Object">
				<goalmapping ref="agoal.oparam"/>
			</parameter>
			<parameter name="result" class="Object">
				<goalmapping ref="agoal.oresult"/>
			</parameter>
			<body>new ResultPlan(0, true, $plan.param)</body>
			<trigger>
				<goal ref="agoal"/>
			</trigger>
		</plan>
	</plans>
	
</agent>
