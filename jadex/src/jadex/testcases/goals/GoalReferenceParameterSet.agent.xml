<!--
	<H3>Test if goal references can have paraemter sets.</H3>

	Test correct operation of parameter sets when using goal
	references.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="GoalReferenceParameterSet"
	package="jadex.testcases.goals">

	<imports>
		<import>jadex.testcases.ResultPlan</import>
	</imports>

	<capabilities>
		<capability name="cap" file="GoalReferenceParameterSet"/>
		<capability name="testcap" file="jadex.planlib.Test"/>
	</capabilities>

	<beliefs>
		<beliefsetref name="reports">
			<concrete ref="testcap.reports"/>
		</beliefsetref>
		<beliefref name="testcase_cnt">
			<concrete ref="testcap.testcase_cnt"/>
		</beliefref>
		<beliefref name="timeout" class="long" exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testcenter" class="jadex.adapter.fipa.AgentIdentifier" exported="true">
			<concrete ref="testcap.testcenter"/>
		</beliefref>
	</beliefs>

	<goals>
		<achievegoalref name="testgoal">
			<concrete ref="cap.testgoal"/>
		 </achievegoalref>
	</goals>
	
	<plans>
		<plan name="testplan">
			<body class="GenerateGoalPlan"/>
			<!-- <body>new GenerateGoalPlan()</body> -->
		</plan>
		<plan name="grps_plan">
			<parameterset name="paramset" class="String">
				<goalmapping ref="testgoal.paramset"/>
			</parameterset>
			<body class="GoalReferenceParameterSetPlan"/>
			<!-- <body>new GoalReferenceParameterSetPlan()</body>-->
			<trigger>
				<goal ref="testgoal"/>
			</trigger>
		</plan>
	</plans>

	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief ref="testcase_cnt">
					<fact>5</fact>
				</initialbelief>
			</beliefs>
			<plans>
				<initialplan ref="testplan"/>
			</plans>
		</configuration>
	</configurations>

</agent>

