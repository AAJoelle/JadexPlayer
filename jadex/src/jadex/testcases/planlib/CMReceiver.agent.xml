<!--
	<H3>Responder agent used for by CMInitiator.</H3>
	Tests the FIPA-Cancel-Meta-Protocol.
-->
<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="CMReceiver"
	package="jadex.testcases.planlib">

	<imports>
		<import>jadex.testcases.*</import>
		<import>jadex.runtime.*</import>
	</imports>

	<capabilities>
		<capability name="procap" file="jadex.planlib.Protocols"/>
	</capabilities>

	<beliefs>
		<!-- The filter for deciding which request messages are handled in this capability. -->
		<beliefref name="rp_filter" class="IFilter">
			<concrete ref="procap.rp_filter"/>
		</beliefref>
	</beliefs>

	<goals>
		<querygoalref name="rp_decide_request">
			<concrete ref="procap.rp_decide_request"/>
		</querygoalref>
	</goals>

	<plans>

		<!-- Dummy plan to decide the request (just waits for a long time). -->
		<plan name="rp_decide_request_plan">
			<body>new ResultPlan(10000, false)</body>
			<trigger>
				<goal ref="rp_decide_request"/>
			</trigger>
		</plan>

	</plans>

	<properties>
		<!-- <property name="loggin.level">java.util.logging.Level.INFO</property> -->
	</properties>

	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief ref="rp_filter">
					<fact>IFilter.ALWAYS</fact>
				</initialbelief>
			</beliefs>
		</configuration>
	</configurations>

</agent>

