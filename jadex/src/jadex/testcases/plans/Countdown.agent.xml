<!--
	<H3>Test a plan's context condition.</H3>

	Countdown Agent; tests the context condition of a plan.
	Has an initial plan that counts down to zero and
	uses a context condition to stop counting.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="Countdown"
	package="jadex.testcases.plans">

	<imports>
		<import>jadex.planlib.TestReport</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.planlib.Test"/>
	</capabilities>

	<beliefs>
		<beliefsetref name="reports" class="TestReport">
			<concrete ref="testcap.reports"/>
		</beliefsetref>
		<beliefref name="timeout" class="long" exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testcenter" class="jadex.adapter.fipa.AgentIdentifier" exported="true">
			<concrete ref="testcap.testcenter"/>
		</beliefref>

		<belief name="num"  class="int">
			<fact>3</fact>
		</belief>
	</beliefs>

	<plans>
		<plan name="countdown">
			<body class="CountdownPlan"/>
			<!-- <body>new CountdownPlan()</body> -->
			<contextcondition>$beliefbase.num&gt;0</contextcondition>
		</plan>
		<plan name="tester">
			<body class="CountdownTesterPlan"/>
			<!-- <body>new CountdownTesterPlan()</body> -->
		</plan>
	</plans>


	<properties>
        <!--<property name="debugging">true</property>-->
        <!--<property name="logging.level">java.util.logging.Level.INFO</property>-->
        <property name="logging.useParentHandlers">true</property>
    </properties>


	<configurations>
		<configuration name="default">
			<plans>
				<initialplan ref="countdown"/>
				<initialplan ref="tester"/>
			</plans>
		</configuration>
	</configurations>

</agent>

