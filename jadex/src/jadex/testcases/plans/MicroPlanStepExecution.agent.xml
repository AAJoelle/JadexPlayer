<!--
	<H3>Test the micro-plan step execution of plans.</H3>
	
	Micro plan step agent; tests the micro plan step execution of a plan.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="MicroPlanStepExecution"
	package="jadex.testcases.plans">

	<imports>
		<import>java.util.logging.*</import>
		<import>jadex.testcases.*</import>
		<import>jadex.planlib.TestReport</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.planlib.Test"/>
	</capabilities>

	<beliefs>
		<beliefsetref name="reports" class="TestReport">
			<concrete ref="testcap.reports"/>
		</beliefsetref>
		<beliefref name="testcase_cnt" class="int">
			<concrete ref="testcap.testcase_cnt"/>
		</beliefref>
		<beliefref name="timeout" class="long" exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testcenter" class="jadex.adapter.fipa.AgentIdentifier" exported="true">
			<concrete ref="testcap.testcenter"/>
		</beliefref>

		<belief name="a"  class="boolean">
			<fact>false</fact>
		</belief>
		<belief name="b"  class="boolean">
			<fact>false</fact>
		</belief>
		<belief name="a_cnt" class="int"/>
		<belief name="b_cnt" class="int"/>
		<belief name="ab_cnt" class="int"/>
	</beliefs>

	<plans>
		<plan name="tester">
			<body class="MicroStepPlan"/>
			<!-- <body>new MicroStepPlan()</body>-->
		</plan>
		<plan name="triggered_a">
			<body>new BeliefIncrementPlan("a_cnt")</body>
			<trigger>
				<condition>$beliefbase.a</condition>
			</trigger>
		</plan>
		<plan name="triggered_b">
			<body>new BeliefIncrementPlan("a_cnt")</body>
			<trigger>
				<condition>$beliefbase.b</condition>
			</trigger>
		</plan>
		<plan name="triggered_ab">
			<body>new BeliefIncrementPlan("ab_cnt")</body>
			<trigger>
				<condition>$beliefbase.a &amp;&amp; $beliefbase.b</condition>
			</trigger>
		</plan>
	</plans>

	<properties>
		<!--<property name="logging.level">Level.INFO</property>-->
		<property name="logging.useParentHandlers">true</property>
		<!--<property name="debugging">true</property>-->
	</properties>

	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief ref="testcase_cnt">
					<fact>3</fact>
				</initialbelief>
			</beliefs>
			<plans>
				<initialplan ref="tester"/>
			</plans>
		</configuration>
	</configurations>

</agent>

