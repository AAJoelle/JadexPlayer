<!--
	<H3>Test meta-level reasoning.</H3>

	The agent creates a goal
	for which more than one plan is applicable. For choosing
	between the alternative plan a "metalevel_reasoning_goal"
	is created and handled by a plan.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="PlanMetaLevelReasoning"
	package="jadex.testcases.plans">

	<imports>
		<import>jadex.testcases.*</import>
		<import>jadex.util.*</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.planlib.Test"/>
		<capability name="mlrcap" file="MLR"/>
	</capabilities>

	<beliefs>
		<beliefsetref name="reports">
			<concrete ref="testcap.reports"/>
		</beliefsetref>
		<beliefref name="testcase_cnt">
			<concrete ref="testcap.testcase_cnt" />
		</beliefref>
		<beliefref name="timeout" class="long" exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testcenter" class="jadex.adapter.fipa.AgentIdentifier" exported="true">
			<concrete ref="testcap.testcenter"/>
		</beliefref>

		<beliefsetref name="plans" class="double">
			<concrete ref="mlrcap.plans"/>
		</beliefsetref>
	</beliefs>

	<goals>
		<achievegoalref name="app_goal">
			<concrete ref="mlrcap.app_goal"/>
 		</achievegoalref>

		<metagoalref name="ml_goal">
			<concrete ref="mlrcap.ml_goal"/>
		</metagoalref>
	</goals>

	<plans>
		<plan name="good_plan">
			<parameter name="importance" class="double">
				<value>1.0</value>
			</parameter>
			<body>new ResultPlan(false, new Double($plan.importance), "plans")</body>
			<trigger>
				<goal ref="app_goal"/>
			</trigger>
		</plan>
		<plan name="tester">
			<body>new MLRSortTesterPlan()</body>
		</plan>
	</plans>

	<events>
		<internaleventref name="testinternalevent">
			<concrete ref="mlrcap.testinternalevent"/>
		</internaleventref>
		<internaleventref name="testfilter">
			<concrete ref="mlrcap.testfilter"/>
		</internaleventref>
		<messageeventref name="testmessageevent">
			<concrete ref="mlrcap.testmessageevent"/>
		</messageeventref>
	</events>

	<properties>
        <!--<property name="debugging">true</property>-->
        <!--<property name="logging.level">java.util.logging.Level.FINE</property>-->
        <property name="logging.useParentHandlers">true</property>
    </properties>

	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief ref="testcase_cnt">
					<fact>3</fact>
				</initialbelief>
			</beliefs>
			<plans>
				<initialplan ref="tester"/>
			</plans>
		</configuration>
	</configurations>

</agent>

