<!--
	<H3>Plan Abort Agent</H3>

	Tests if abortion of plans is properly synchronized.
	<br>
	The testabort plan is aborted, when the increment plan
	increments the count belief leading to the testabort goal
	being achieved (abort on success).
-->
<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="PlanAbort"
	package="jadex.testcases.plans">

	<imports>
		<import>jadex.testcases.*</import>
		<import>jadex.planlib.TestReport</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.planlib.Test"/>
	</capabilities>

	<beliefs>
		<beliefsetref name="reports" class="TestReport">
			<concrete ref="testcap.reports"/>
		</beliefsetref>
		<beliefref name="testcase_cnt" class="int">
			<concrete ref="testcap.testcase_cnt"/>
		</beliefref>
		<beliefref name="timeout" class="long" exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testcenter" class="jadex.adapter.fipa.AgentIdentifier" exported="true">
			<concrete ref="testcap.testcenter"/>
		</beliefref>

		<belief name="count" class="int"/>
	</beliefs>

	<goals>
		<!-- execute plan and abort after some time -->
		<achievegoal name="testabort">
			<targetcondition>$beliefbase.count&gt;3</targetcondition>
		</achievegoal>
		<!-- goal succeeds without plan -->
		<achievegoal name="successgoal">
			<targetcondition>true</targetcondition>
		</achievegoal>
		<!-- goal fails without plan -->
		<achievegoal name="failuregoal">
			<targetcondition>false</targetcondition>
		</achievegoal>
		<!-- goal succeeds after plan -->
		<achievegoal name="successgoal2"/>
		<!-- goal fails after plan -->
		<achievegoal name="failuregoal2"/>
	</goals>

	<plans>
		<plan name="testabort">
			<body class="TestAbortPlan"/>
			<!-- <body>new TestAbortPlan()</body> -->
			<trigger>
				<goal ref="testabort"/>
			</trigger>
		</plan>
		<plan name="increment">
			<body>new BeliefIncrementPlan("count", 1, 100)</body>
		</plan>
		<plan name="successplan">
			<body>new ResultPlan(10, true)</body>
			<trigger>
				<goal ref="successgoal2"/>
			</trigger>
		</plan>
		<plan name="failureplan">
			<body>new ResultPlan(10, false)</body>
			<trigger>
				<goal ref="failuregoal2"/>
			</trigger>
		</plan>
	</plans>

	<properties>
        <!-- <property name="logging.level">java.util.logging.Level.INFO</property> -->
    </properties>

	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief ref="testcase_cnt">
					<fact>6</fact>
				</initialbelief>
			</beliefs>
			<goals>
				<initialgoal ref="testabort"/>
			</goals>
			<plans>
				<initialplan ref="increment"/>
			</plans>
		</configuration>
	</configurations>
</agent>

