<!--
	<H3>Test a plan's trigger.</H3>

	Especially tests the belief (set) triggers, that wait for
	a belief to change or a fact being added or removed to/from
	a belief set.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="BeliefTrigger"
	package="jadex.testcases.plans">

	<imports>
		<import>jadex.testcases.*</import>
		<import>jadex.planlib.TestReport</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.planlib.Test"/>
	</capabilities>

	<beliefs>
		<beliefsetref name="reports" class="TestReport">
			<concrete ref="testcap.reports"/>
		</beliefsetref>
		<beliefref name="testcase_cnt" class="int">
			<concrete ref="testcap.testcase_cnt"/>
		</beliefref>
		<beliefref name="timeout" class="long" exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testcenter" class="jadex.adapter.fipa.AgentIdentifier" exported="true">
			<concrete ref="testcap.testcenter"/>
		</beliefref>

		<belief name="bel"  class="int"/>
		<beliefset name="belset"  class="int"/>
		<belief name="result" class="int"/>
	</beliefs>

	<plans>
		<plan name="triggertest">
			<body>new BeliefIncrementPlan("result")</body>
			<trigger>
				<beliefchange ref="bel"/>
				<factadded ref="belset"/>
				<factremoved ref="belset"/>
			</trigger>
		</plan>

		<plan name="tester">
			<body class="BeliefTriggerPlan"/>
			<!-- <body>new BeliefTriggerPlan()</body>-->
		</plan>
	</plans>

	<properties>
        <!--<property name="debugging">true</property>-->
        <!--<property name="logging.level">java.util.logging.Level.INFO</property>-->
        <property name="logging.useParentHandlers">true</property>
    </properties>

	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief ref="testcase_cnt">
					<fact>10</fact>
				</initialbelief>
			</beliefs>
			<plans>
				<initialplan ref="tester"/>
			</plans>
		</configuration>
	</configurations>

</agent>

