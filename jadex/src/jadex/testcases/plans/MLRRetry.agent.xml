<!--
	<H3>Test retry in meta-level reasoning.</H3>

	Test for ensuring that retry works in combination
	with meta-level reasoning. In response to forum
	post of a-orler at 02/17/06.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="MLRRetry"
	package="jadex.testcases.plans">

	<imports>
		<import>jadex.testcases.*</import>
		<import>jadex.util.*</import>
		<import>jadex.runtime.*</import>
		<import>java.util.*</import>
		<import>jadex.planlib.TestReport</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.planlib.Test"/>
	</capabilities>

	<beliefs>
		<beliefsetref name="reports" class="TestReport">
			<concrete ref="testcap.reports"/>
		</beliefsetref>
		<beliefref name="timeout" class="long" exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testcenter" class="jadex.adapter.fipa.AgentIdentifier" exported="true">
			<concrete ref="testcap.testcenter"/>
		</beliefref>

		<belief name="result" class="int"/>
	</beliefs>

	<goals>
		<achievegoal name="app_goal"/>

		<metagoal name="ml_goal">
			<parameterset name="applicables" class="ICandidateInfo"/>
			<parameterset name="result" class="ICandidateInfo" direction="out"/>
			<trigger>
				<goal ref="app_goal"/>
			</trigger>
		</metagoal>
	</goals>

	<plans>
		<plan name="plan2">
			<body>new ResultPlan(-1, false, new Integer($beliefbase.result+1), "result")</body>
			<trigger>
				<goal ref="app_goal"/>
			</trigger>
		</plan>

		<plan name="plan1">
			<body>new ResultPlan(-1, true, new Integer($beliefbase.result+1), "result")</body>
			<trigger>
				<goal ref="app_goal"/>
			</trigger>
		</plan>

		<plan name="ml_plan">
			<parameterset name="applicables" class="List">
				<goalmapping ref="ml_goal.applicables"/>
			</parameterset>
			<parameterset name="result" class="List">
				<goalmapping ref="ml_goal.result"/>
			</parameterset>
			<body class="MLRPlan"/>
			<!-- <body>new MLRPlan()</body> -->
			<trigger>
				<goal ref="ml_goal"/>
			</trigger>
		</plan>

		<plan name="tester">
			<body class="MLRTesterPlan"/>
			<!-- <body>new MLRTesterPlan()</body> -->
		</plan>
	</plans>

	<properties>
		<property name="debugging">false</property>
	</properties>

	<configurations>
		<configuration name="default">
			<goals>
				<initialgoal ref="app_goal"/>
			</goals>
			<plans>
				<initialplan ref="tester"/>
			</plans>
		</configuration>
	</configurations>

</agent>

