<!--
	<H3>Tests binding values for a plan.</H3>

	Reacts on "ping" query-ref and sends
	back inform "alive" because it is the
	first suitable value from the binding
	values set.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="PingBinding"
	package="jadex.testcases.plans">

	<imports>
		<import>jadex.testcases.*</import>
		<import>jadex.planlib.*</import>
		<import>jadex.adapter.fipa.*</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.planlib.Test"/>
	</capabilities>

	<beliefs>
		<beliefsetref name="reports" class="TestReport">
			<concrete ref="testcap.reports"/>
		</beliefsetref>
		<beliefref name="timeout" class="long" exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testcenter" class="jadex.adapter.fipa.AgentIdentifier" exported="true">
			<concrete ref="testcap.testcenter"/>
		</beliefref>

		<belief name="a" class="int"/>
		<belief name="b" class="int"/>
		<belief name="c" class="int"/>
	</beliefs>

	<goals>
		<achievegoal name="print">
		</achievegoal>
	</goals>

	<plans>
		<!--<plan name="ping">
			<parameter name="reply" class="String">
				<bindingoptions>new String[]{"alive", "alaaf"}</bindingoptions>
			</parameter>
			<body>new AnswerPingPlan("ping", $plan.reply)</body>
			<trigger>
				<messageevent ref="query_ref_ping"/>
			</trigger>
		</plan>-->
		<plan name="printer">
			<parameter name="bel" class="String">
				<bindingoptions>new String[]{"a","b","c"}</bindingoptions>
			</parameter>
			<body>new ResultPlan(-1, false, new Integer(1), $plan.bel)</body>
			<trigger>
				<goal ref="print"/>
			</trigger>
		</plan>
		<plan name="tester">
			<body class="PlanBindingTesterPlan"/>
			<!-- <body>new PlanBindingTesterPlan()</body> -->
		</plan>
	</plans>

	<!--<events>
		<messageevent name="query_ref_ping" direction="receive" type="fipa" posttoall="true">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.QUERY_REF</value>
			</parameter>
			<parameter name="content" class="String">
				<value>"ping"</value>
			</parameter>
		</messageevent>

		<messageevent name="inform_alive" type="fipa" exported="true">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.INFORM</value>
			</parameter>
		</messageevent>
	</events>-->

	<properties>
		<!--<property name="logging.level">java.util.logging.Level.FINE</property>-->
		<property name="logging.useParentHandlers">true</property>
		<property name="debugging">false</property>
	</properties>

	<configurations>
		<configuration name="default">
			<plans>
				<initialplan ref="tester"/>
			</plans>
		</configuration>
	</configurations>

</agent>

