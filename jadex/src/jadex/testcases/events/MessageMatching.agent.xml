<!--
	<H3>Test the message matching.</H3>

-->
<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="MessageMatching"
	package="jadex.testcases.events">

	<imports>
		<import>jadex.testcases.*</import>
		<import>jadex.adapter.fipa.*</import>
		<import>java.util.logging.Level</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.planlib.Test"/>
	</capabilities>

	<beliefs>
		<beliefsetref name="reports">
			<concrete ref="testcap.reports"/>
		</beliefsetref>
		<beliefref name="testcase_cnt" class="int">
			<concrete ref="testcap.testcase_cnt"/>
		</beliefref>
		<beliefref name="timeout" class="long" exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testcenter" class="jadex.adapter.fipa.AgentIdentifier" exported="true">
			<concrete ref="testcap.testcenter"/>
		</beliefref>
		<beliefset name="results" class="String"/>
	</beliefs>

	<plans>
		<plan name="messagereceiver_one">
			<body>new ResultPlan(true, "one", "results")</body>
			<trigger>
				<messageevent ref="inform_one"/>
			</trigger>
		</plan>
		<plan name="messagereceiver_two">
			<body>new ResultPlan(true, "two", "results")</body>
			<trigger>
				<messageevent ref="inform_two"/>
			</trigger>
		</plan>
		<plan name="test">
			<body class="MessageMatchingPlan"/>
			<!-- <body>new MessageMatchingPlan()</body> -->
		</plan>
	</plans>

	<events>
		<messageevent name="inform_one" type="fipa" direction="receive">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.INFORM</value>
			</parameter>
			<parameter name="content" class="String"/>
			<match>"one".equals($content)</match>
		</messageevent>

		<messageevent name="inform_two" type="fipa" direction="receive">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.INFORM</value>
			</parameter>
			<parameter name="content" class="String"/>
			<match>"two".equals($content) &amp;&amp; "conv-id".equals($conversation_id)</match>
		</messageevent>

		<messageevent name="inform" type="fipa" direction="send">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.INFORM</value>
			</parameter>
		</messageevent>
	</events>

	<properties>
		<!-- <property name="debugging">true</property>	 -->
		<!-- <property name="logging.level">Level.INFO</property> -->
	</properties>

	<configurations>
		<configuration name="test">
			<beliefs>
				<initialbelief ref="testcase_cnt">
					<fact>4</fact>
				</initialbelief>
			</beliefs>
			<plans>
				<initialplan ref="test"/>
			</plans>
		</configuration>
	</configurations>

</agent>

