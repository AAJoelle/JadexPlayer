<!--
	The start agents capability helps starting agents.
-->
<capability xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	package="jadex.planlib"
	name="StartAgents">

	<imports>
		<import>jadex.runtime.BasicAgentIdentifier</import>
	</imports>

	<capabilities>
		<capability name="ams" file="jadex.planlib.AMS"/>
	</capabilities>

	<goals>
		<achievegoal name="start_agents" exported="true">
			<parameterset name="agentinfos" class="StartAgentInfo"/>
			<parameterset name="agentidentifiers" class="BasicAgentIdentifier" direction="out"/>
		</achievegoal>

		<achievegoalref name="ams_create_agent">
			<concrete ref="ams.ams_create_agent"/>
		</achievegoalref>
	</goals>

	<plans>
		<plan name="start_agents_plan">
			<parameterset name="agentinfos" class="StartAgentInfo">
				<goalmapping ref="start_agents.agentinfos"/>
			</parameterset>
			<parameterset name="agentidentifiers" class="BasicAgentIdentifier" direction="out">
				<goalmapping ref="start_agents.agentidentifiers"/>
			</parameterset>
			<body class="StartAgentsPlan" />
			<!-- <body>new StartAgentsPlan()</body> -->
			<trigger>
				<goal ref="start_agents"/>
			</trigger>
		</plan>
	</plans>

</capability>
